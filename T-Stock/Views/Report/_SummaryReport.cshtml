    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Inventory Summary Report</title>
        <style>
            body { font-family: "Arial", sans-serif; font-size: 12px; margin: 30px; color: #000; }
            .header { text-align: center; margin-bottom: 30px; line-height: 1.4; }
            .company { font-size: 20px; font-weight: bold; }
            .address { font-size: 11px; }
            .title { font-size: 18px; font-weight: bold; margin: 20px 0 5px; text-decoration: underline; }
            .period { font-size: 13px; font-weight: bold; }
            table { width: 100%; border-collapse: collapse; margin: 25px 0; border: 1px solid #000; }
            th { background: #fff; padding: 8px 6px; border-bottom: 2px solid #000; font-weight: bold; text-align: left; }
            td { padding: 6px; border-bottom: 1px solid #999; }
            .text-right { text-align: right; }
            .text-center { text-align: center; }
            .total { border-top: 1px solid #000; font-weight: bold; }
            .double { border-top: 3px double #000; font-weight: bold; font-size: 13px; }
            .no-border { border: none; }
            .highlight { background-color: #f9f9f9; }
            @@media print {
                body { margin: 10mm; }
                @@page { size: A4; margin: 10mm; }
            }
        </style>
    </head>
    @{
                var now = DateTime.Now;

    }
    <body>


    <div class="header">

        <div class="company">TAR UMT INVENTORY MANAGEMENT SYSTEM</div>
        <div class="address">
            Tunku Abdul Rahman University of Management and Technology<br>
            Jalan Genting Kelang, 53300 Kuala Lumpur, Malaysia<br>
            Tel: 03-4145 0123 • Email: inventory@tarumt.edu.my
        </div>
        <div class="title">INVENTORY SUMMARY REPORT</div>
        <div class="period">For the month of @ViewBag.ReportMonth</div>
    </div>

    <table class="no-border">
        <tr>
            <td width="300"><strong>Report Generated Date</strong></td>
            <td>: @ViewBag.GeneratedDate</td>
        </tr>
        <tr>
            <td><strong>Generated By</strong></td>
            <td>: @ViewBag.GeneratedBy</td>
        </tr>
    </table>

    <table>
        <thead>
            <tr>
                <th width="60">No.</th>
                <th>Description</th>
                <th width="150" class="text-right">Quantity</th>
                <th width="150" class="text-right">Items</th>
            </tr>
        </thead>
        <tbody>
            <tr><td>1</td><td>Total Active Products</td><td class="text-right">-</td><td class="text-right">@ViewBag.ActiveProducts</td></tr>
            <tr><td>2</td><td>Total Stock Quantity</td><td class="text-right">@ViewBag.TotalStockQty units</td><td class="text-right">-</td></tr>
          @*  <tr><td>3</td><td>Low Stock Items (≤ Reorder Level)</td><td class="text-right">-</td><td class="text-right">@ViewBag.LowStockCount</td></tr>*@
            <tr><td>3</td><td>Out of Stock Items</td><td class="text-right">-</td><td class="text-right">@ViewBag.OutOfStockCount</td></tr>
            <tr><td colspan="4" class="total"></td></tr>
            <tr>
                <td colspan="2" class="text-right double"><strong>TOTAL STOCK QUANTITY</strong></td>
                <td class="text-right double">@ViewBag.TotalStockQty units</td>
                <td class="text-right double">-</td>
            </tr>
        </tbody>
    </table>

    <h3 style="text-decoration:underline; margin-top:40px;">Top 10 Highest Stock Quantity Items</h3>
    <table>
        <thead>
            <tr>
                <th width="50">No</th>
                <th width="120">Product Code</th>
                <th>Product Name</th>
                <th width="140">Category</th>
                <th width="120" class="text-right">Quantity</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Top10Items != null)
            {
                foreach (var item in ViewBag.Top10Items)
                {
                    <tr>
                        <td>@item.No</td>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>
                        <td>@item.Category</td>
                        <td class="text-right">@item.Quantity.ToString("N0")</td>
                    </tr>
                }
            }
            <tr>
                <td colspan="4" class="text-right total"><strong>Sub Total (Top 10)</strong></td>
                <td class="text-right">@ViewBag.Top10TotalQty units</td>
            </tr>
        </tbody>
    </table>

    <div style="margin-top:60px;">
        <table class="no-border" style="width:100%">
            <tr>
                <td width="33%">_________________<br>Prepared By</td>
                <td width="33%">_________________<br>Checked By</td>
                <td width="34%">_________________<br>Approved By</td>
            </tr>
            <tr>
                <td>Name: @ViewBag.GeneratedBy</td>
                <td>Name: </td>
                <td>Name: </td>
            </tr>
            <tr>
                <td>Date: @now</td>
                <td>Date: </td>
                <td>Date: </td>
            </tr>
        </table>
    </div>

    <div style="margin-top:50px; text-align:center; font-size:11px; color:#555;">
        This is a computer-generated report • Page 1 of 1
    </div>

    </body>
    </html>