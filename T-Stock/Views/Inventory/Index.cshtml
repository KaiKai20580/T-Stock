@{
    bool isAjax = false;
    if (Context?.Request?.Headers != null &&
        Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest")
    {
        isAjax = true;
    }

    Layout = isAjax ? null : "_Layout";
}


<title>@ViewData["Title"]</title>
@model List<T_Stock.Models.Inventory>


<div class="INVENTORY">
    <h2>Inventory</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Category</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No inventory items found.</td>
                </tr>
            }
        </tbody>
    </table>

    <a class="ajax-nav btn btn-secondary" href="/Inventory/Create">
        Create
    </a>
</div>