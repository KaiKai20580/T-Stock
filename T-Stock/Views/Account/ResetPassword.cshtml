@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />

    <style>

        body {
            background: black;
            
        }

        .card-center {
            max-width: 400px;
            margin: 80px auto;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            background-color: white;
        }

        .form-label {
            font-weight: bold;
        }

        .alert {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            min-width: 300px;
            z-index: 1050;
            text-align: center;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
            color: #0d6efd;
        }

        h1 {
            text-align: center;
            margin-bottom: 5px;
            font-weight: bold;
            color: White;
        }

        .title {
            text-align: center;
            font-size: 45px;
            color: white;
            font-weight: bold;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 20px;
        }



    </style>
</head>
<body>
    <!-- Logo and Title -->
    <div class="title">
        <i class="ri-unsplash-fill"></i>
        <h1>T-Stock</h1>
    </div>

    <!-- Reset Password Card -->
    <div class="card card-center">
        <h2>Reset Password</h2>

        @if (TempData["Message"] != null)
        {
            var messageType = TempData["MessageType"]?.ToString() ?? "info";
            <div class="alert alert-@messageType alert-dismissible fade show" role="alert">
                @TempData["Message"]
            </div>

            <script>
                setTimeout(() => {
                    const alert = document.querySelector('.alert');
                    if (alert) alert.remove();
                }, 3000);
            </script>
        }


        <form method="post">
            <input type="hidden" name="token" value="@Context.Request.Query["token"]" />

            <div class="mb-3">
                <label class="form-label">New Password</label>
                <input type="password" class="form-control" name="newPassword" placeholder="Enter new password" minlength="8" required />
                
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm new password" minlength="8" required />
            </div>




            <button type="submit" class="btn btn-primary w-100">Save Password</button>
            <div class="mt-3 text-center">
                <a href="/Account/Login">Back to Login</a>
            </div>
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
