@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />

    <style>
        body {
            background: black;
        }

        .card-center {
            max-width: 450px;
            margin: 140px auto 0 auto;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            background-color: white;
        }

        .form-label {
            font-weight: bold;
        }

        .alert {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            min-width: 300px;
            z-index: 1050;
            text-align: center;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
            color: #0d6efd;
        }

        h1 {
            text-align: center;
            margin-bottom: 5px;
            font-weight: bold;
            color: white;
        }

        .title {
            text-align: center;
            font-size: 45px;
            color: white;
            font-weight: bold;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <!-- Logo and Title -->
    <div class="title">
        <i class="ri-unsplash-fill"></i>
        <h1>T-Stock</h1>
    </div>

    <!-- Forgot Password Card -->
    <div class="card card-center">
        <h2>Forgot Password</h2>

        @if (TempData["Message"] != null)
        {
            var type = TempData["MessageType"]?.ToString() ?? "danger";
            <div class="alert alert-@type alert-dismissible fade show" role="alert" id="msg-alert">
                @TempData["Message"]
            </div>

            <script>
                setTimeout(() => {
                    const alert = document.getElementById('msg-alert');
                    if (alert) alert.remove();
                }, 3000);
            </script>
        }

        @if (TempData["ResetLink"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert" id="reset-alert">
                Your reset link is ready! <br />
                <span id="reset-link" style="word-break: break-all;">@TempData["ResetLink"]</span>
                <button type="button" class="btn btn-sm btn-outline-dark ms-2" onclick="copyLink()">Copy Link</button>
            </div>

            <script>
                setTimeout(() => {
                    const alert = document.getElementById('reset-alert');
                    if (alert) alert.remove();
                }, 5000);

                function copyLink() {
                    const link = document.getElementById('reset-link').innerText;
                    navigator.clipboard.writeText(link)
                        .then(() => alert("Link copied to clipboard!"))
                        .catch(err => alert("Failed to copy link: " + err));
                }
            </script>
        }

        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label class="form-label">Enter your email</label>
                <input type="email"
                       class="form-control"
                       name="email"
                       placeholder="example@gmail.com"
                       required />
            </div>

            <button type="submit" class="btn btn-primary w-100">
                Send Reset Link
            </button>
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
