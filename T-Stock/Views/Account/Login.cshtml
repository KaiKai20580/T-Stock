@model T_Stock.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>T-Stock Login</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            background: black;
            font-family: Arial, sans-serif;
            color: #000;
        }

        .login-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            width: 430px;
            background: #D9D9D9;
            padding: 55px 45px;
            border-radius: 30px;
            box-sizing: border-box;
            text-align: left;
            position: relative;
        }

        .title {
            position: absolute;
            margin-left: 20px;
            margin-top: 20px;
            font-size: 45px;
            color: white;
            font-weight: bold;
            display: flex;
            gap: 10px;
        }

            .title i {
                position: relative;
                color: white;
                text-align: center;
                display: flex;
                bottom: 6px;
            }

        h2 {
            text-align: center;
            font-size: 35px;
            margin-top: 0;
            margin-bottom: 25px;
        }

        label {
            font-size: 23px;
            font-weight: bold;
        }

        .input-box {
            width: 100%;
            height: 45px;
            background: #fff;
            border: 2px solid #000;
            border-radius: 10px;
            font-size: 20px;
            padding: 5px 10px;
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .login-btn {
            width: 100%;
            height: 50px;
            background: #4CAF50;
            border: 2px solid #000;
            border-radius: 15px;
            font-size: 25px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
        }

        .error-text {
            color: red;
            text-align: center;
            margin-top: 10px;
            font-size: 18px;
        }

        .field-error {
            color: red;
            font-size: 15px;
            margin-bottom: 15px;
        }

        
        .forgot-password {
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>

<body>
    <div class="title">
        <i class="ri-unsplash-fill"></i>
        <h2>T-Stock</h2>
    </div>

    <div class="login-container">
        <div class="login-box">

            <h2>LOGIN</h2>

            <form asp-controller="Account" asp-action="Login" method="post">
                <label>Email</label>
                <input asp-for="Email" class="input-box" />
                <span asp-validation-for="Email" class="field-error"></span>

                <label>Password</label>
                <input asp-for="Password" type="password" class="input-box" />
                <span asp-validation-for="Password" class="field-error"></span>

                <button class="login-btn" type="submit">Login</button>

                
                <div class="forgot-password">
                    <a href="/Account/ForgotPassword" class="text-primary">Forgot Password?</a>
                </div>
            </form>

            
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-text">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>
    </div>
</body>
</html>
