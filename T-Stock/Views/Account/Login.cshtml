@model T_Stock.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>T-Stock Login</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            background: black;
            font-family: Arial, sans-serif;
        }

        .login-container {
            width: 100vw;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            width: 430px;
            background: #D9D9D9;
            padding: 55px 45px;
            border-radius: 30px;
            box-sizing: border-box;
            text-align: left;
            position: relative;
        }

        .title {
            position: absolute;
            margin-left: 20px;
            margin-top: 20px;
            font-size: 45px;
            color: white;
            font-weight: bold;
            display: flex;
            gap: 10px;
        }

            .title i {
                position: relative;
                color: white;
                bottom: 6px;
            }

        h2 {
            text-align: center;
            font-size: 35px;
            margin: 0 0 25px 0;
        }

        label {
            font-size: 23px;
            font-weight: bold;
        }

        .input-box {
            width: 100%;
            height: 45px;
            background: #fff;
            border: 2px solid #000;
            border-radius: 10px;
            font-size: 20px;
            padding: 5px 10px;
            margin-top: 5px;
            margin-bottom: 5px;
        }

        .login-btn {
            width: 100%;
            height: 50px;
            background: #4CAF50;
            border: 2px solid #000;
            border-radius: 15px;
            font-size: 25px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
        }

        .field-error {
            color: red;
            font-size: 15px;
            margin-bottom: 15px;
        }

        .forgot-password {
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>

<body>
    <div class="title">
        <i class="ri-unsplash-fill"></i>
        <h2>T-Stock</h2>
    </div>

    <div class="login-container">
        <div class="login-box">
            <h2>LOGIN</h2>

            <form id="login-form" asp-controller="Account" asp-action="Login" method="post">
                <div id="step-email">
                    <label>Email</label>
                    <input asp-for="Email" class="input-box" id="email-input" />
                    <span id="email-error" class="field-error"></span>
                    <button type="button" class="login-btn" onclick="nextStep()">Next</button>
                </div>

                <div id="step-password" style="display:none;">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="input-box" />
                    <span asp-validation-for="Password" class="field-error"></span>
                    <button type="submit" class="login-btn">Login</button>
                </div>

                <div class="forgot-password">
                    <a href="/Account/ForgotPassword" class="text-primary">Forgot Password?</a>
                </div>
            </form>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="field-error">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>
    </div>

  <script>
    function nextStep() {
        const emailInput = document.getElementById('email-input');
        const email = emailInput.value.trim();
        const errorBox = document.getElementById('email-error');

        errorBox.textContent = "";

        if (!email) {
            errorBox.textContent = "Email is required.";
            return;
        }

        if (!email.includes("@@")) {
            errorBox.textContent = "Email must contain '@@'.";
            return;
        }

        fetch('@Url.Action("CheckEmail", "Account")', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email: email })
        })
        .then(res => res.json())
        .then(data => {
            if (data.status === "error") {
                errorBox.textContent = data.message;
            } else if (data.status === "setpassword") {
                window.location.href = data.redirectUrl;
            } else {
                document.getElementById('step-email').style.display = 'none';
                document.getElementById('step-password').style.display = 'block';
            }
        })
        .catch(err => console.error(err));
    }
</script>

</body>
</html>
