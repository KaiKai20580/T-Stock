@model T_Stock.Models.User

@{
    Layout = null;
    ViewData["Title"] = "Set Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet" />

    <style>
        body {
            background: black;
        }

        .card-center {
            max-width: 400px;
            margin: 80px auto;
            padding: 30px;
            border-radius: 12px;
            background: white;
        }

        .title {
            text-align: center;
            color: white;
            font-size: 45px;
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }
    </style>
</head>

<body>
    <div class="title">
        <i class="ri-unsplash-fill"></i>
        <h1>T-Stock</h1>
    </div>

    <div class="card card-center">
        <h2 class="text-center text-primary">Set Your Password</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"] text-center">
                @TempData["Message"]
            </div>
        }

        <form asp-action="SetPassword" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label">New Password</label>
                <input type="password"
                       name="newPassword"
                       class="form-control"
                       required
                       minlength="8"
                       
                       
            </div>

            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input type="password"
                       name="confirmPassword"
                       class="form-control"
                       required
                       minlength="8" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Set Password</button>

            <div class="text-center mt-3">
                <a asp-action="Login" asp-controller="Account">Back to Login</a>
            </div>
        </form>
    </div>
</body>
</html>
