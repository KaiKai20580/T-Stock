@model IEnumerable<T_Stock.Models.User>

@{
    
    bool isAjax = Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest";
    Layout = isAjax ? null : "_Layout";
    ViewData["Title"] = "Member List";
}

<style>
    
    .sidebar:hover ~ #ajax-content .m-container{
        margin-left: 240px;
        transition: all 0.5s ease;
        width: calc(100% - 320px);
    }

    .m-container {
        width: calc(100% - 200px);
        margin-left: 120px;
		margin-top: 20px;
		transition: all 0.5s ease;
    }
    
    .table-card {
        border: 1px solid #888;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        overflow: visible; 
    }

    
    .custom-table thead {
        background-color: #212529;
        color: black;
    }

    .custom-table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        padding: 15px;
        background-color: lightgrey;
        color: black;
        border-right: 1px solid #4d5154;
        border-bottom: 1px solid #4d5154;
    }

    
    .custom-table td {
        padding: 15px;
        vertical-align: middle;
        color: #333;
        border-right: 1px solid #888;
        border-bottom: 1px solid #888;
        transition: background-color 0.2s ease;
    }

    
    .custom-table tbody tr:nth-child(odd) {
        background-color: #ffffff;
    }

    .custom-table tbody tr:nth-child(even) {
        background-color: #e2e3e5;
    }

    
    .custom-table th:last-child,
    .custom-table td:last-child {
        border-right: none;
    }

    .custom-table tbody tr:last-child td {
        border-bottom: none;
    }

    
    .custom-table tbody tr:hover {
        position: relative;
        z-index: 100;
        transform: scale(1.02);
        box-shadow: 0 10px 25px rgba(0,0,0,0.25); 
        outline: 2px solid #0d6efd;
        background-color: #ffffff !important; 
        cursor: pointer;
        transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275); 
    }

        
        .custom-table tbody tr:hover td {
            background-color: transparent !important;
            color: #000;
        }

    .btn-action {
        width: 35px;
        height: 35px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
    }

    .col-number {
        font-weight: bold;
        color: #555;
        width: 60px;
        text-align: center;
    }

    .custom-table {
		width: 100%;
    }

    body.dark-mode .m-word h2 { 
        color: white;
    }

    .m-word h2{
        color: black;
		font-weight: bold;
    }
</style>

<div class="m-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="m-word">
            <h2>Member List</h2>
        </div>
        <button class="btn btn-primary shadow-sm">
            <i class="ri-user-add-line me-1"></i> Register
        </button>
    </div>

    <div class="card table-card bg-white">
        <div class="card-body">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th class="col-number">No.</th>
                        <th>User Email</th>
                        <th>Role</th>
                        <th class="text-center" style="width:150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int rowNo = 1;
                    }

                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="col-number">@(rowNo++)</td>

                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light text-primary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-weight:bold; border: 1px solid #888;">
                                        @user.Email.Substring(0, 1).ToUpper()
                                    </div>
                                    @user.Email
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.Role) && user.Role.Trim().ToLower() == "admin")
                                {
                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">@user.Role</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">@user.Role</span>
                                }
                            </td>
                            <td class="text-center">

                                <button type="button"
                                        class="btn btn-action btn-outline-primary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editModal"
                                        data-id="@user.Id"
                                        data-email="@user.Email"
                                        data-role="@user.Role">
                                    <i class="ri-edit-line"></i>
                                </button>

                                <form asp-controller="Member"
                                      asp-action="Delete"
                                      asp-route-id="@user.Id"
                                      method="post"
                                      style="display:inline-block;"
                                      onsubmit="return confirm('WARNING: Are you sure you want to delete this member? This action cannot be undone.');">

                                    <button type="submit" class="btn btn-action btn-outline-danger">
                                        <i class="ri-delete-bin-line"></i>
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Edit Member</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Member" asp-action="Edit" method="post">
                <div class="modal-body p-4">

                    <input type="hidden" name="Id" id="modalId">

                    <div class="mb-3">
                        <label class="form-label fw-bold">User Email</label>
                        <input type="text" class="form-control" name="Email" id="modalEmail" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Role</label>
                        <select class="form-select" name="Role" id="modalRole">
                            <option value="Supplier">Supplier</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    var editModal = document.getElementById('editModal');
    editModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;

        var id = button.getAttribute('data-id');
        var email = button.getAttribute('data-email');
        var role = button.getAttribute('data-role');

        editModal.querySelector('#modalId').value = id;
        editModal.querySelector('#modalEmail').value = email;
        editModal.querySelector('#modalRole').value = role;
    });
</script>