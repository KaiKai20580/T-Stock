@{
    ViewData["Title"] = "Add Member";
}

<div class="m-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="m-word">
            <h2>Add New Member</h2>
        </div>
        <a asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="ri-arrow-left-line me-1"></i> Back
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm p-4">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input type="email" class="form-control form-control-lg" name="Email" placeholder="Enter user email" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Role</label>
                <select class="form-select form-select-lg" name="Role" required>
                    <option value="">Select Role</option>
                    <option value="Admin">Admin</option>
                    <option value="Staff">Staff</option>
                    <option value="Supplier">Supplier</option>
                </select>
            </div>


            <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">
                <i class="ri-user-add-line me-1"></i> Create Member
            </button>
        </form>
    </div>

</div>

<style>
    .m-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 30px 15px;
    }

    .card {
        border-radius: 12px;
    }

    h2 {
        font-weight: bold;
        color: #0d6efd;
    }

    .form-label {
        font-size: 1.1rem;
    }

    .btn-primary {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .alert {
        margin-bottom: 20px;
    }
</style>
